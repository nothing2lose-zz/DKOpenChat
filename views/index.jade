extends layout

block content

  .container-fluid(ng-controller='AppCtrl')
    .row
      .col-md-12
        h1 카톡 공개채팅 링크 공유기!
        .custom
          //a#modal-294744.btn-primary(href='#modal-container-294744', role='button', data-toggle='modal') 링크 공유하기!
          button.btn.btn-info.btn-lg(type='button', data-toggle='modal', data-target='#modal-container-294744') 링크 공유하기

          #modal-container-294744.modal.fade(role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
              .modal-content
                .modal-header
                  button.close(type='button', data-dismiss='modal', aria-hidden='true')
                    | ×
                  h4#myModalLabel.modal-title
                    | 링크와 제목을 입력해주세요.
                .modal-body
                  form(name='createRoomForm', action='rooms', method='post')
                    h5(ng-bind='form.name') {{form.name}}
                    | 제목:
                    input.my-input(ng-model='form.name', name='name', aria-describedby='inputDescription' style='width: 80%;', type='text' required)
                    br
                    br
                    | 링크:
                    input.my-input(ng-model='form.url', name='url', type='url', aria-describedby='inputDescription', style='width: 80%;' required)
                    br
                    br
                    input.btn-lg.btn-primary(type='submit', value='저장하기')
                    input.btn-lg(type='button', data-dismiss='modal', value='닫기')
