extends layout

block content

  h1 카톡 공개채팅 링크 공유기!
  include partials/navigationBar
  .container-fluid(ng-controller='AppCtrl')
    .row
      //.col-md-2
      //  include partials/categoryMenu
      .col-md-12
        //include partials/createForm
        .container-fluid
          .row
            .col-md-12
              table.table
                thead
                  tr
                    //th
                    //  | #
                    th
                      | 제목
                    th
                      | 링크 (클릭하면 톡 시작!)
                    th
                      | 생성일자
                    th(style="width: 50px;")
                tbody
                  tr(ng-repeat='item in rooms track by item._id')
                    //td= val.id
                    td {{item.name}}
                    td
                      a(href= '{{item.url}}', target='_blank') {{item.url}}
                    td {{item.created | date:'yyyy.MM.dd HH:mm'}}
                    td(style="width: 50px;", ng-if='isMyRoom($index)')
                      button(ng-click="deleteRoom($index)" ng-confirm-click="확인을 누르면 삭제됩니다. 레알 삭제염??") 삭제
                    //td= val.url
                    //td {{item.created | date:'yyyy.MM.dd HH:mm:ss Z'}}
    //pagination.pagination-sm(boundary-links='true', total-items=100, ng-model=1, previous-text='‹', next-text='›', first-text='«', last-text='»')
  include partials/_paginate

  script(src='js/app/app.js')
  script(src='js/app/controllers.js')
